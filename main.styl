body
	background:#EFEFEF;

h1,h2,h3
	margin:0;
	padding:0;

a.collection-item
	color:#1A237E!important;


.boton
	cursor: pointer;

.card a
	color:#1A237E;
	&:hover
		color:#1A237E;
	
.lateral
	font-size:26px;

.logo
	width:100%;
	margin-top: 10px;
	@media screen and (max-width: 992px)
		text-align: left;
		
	@media screen and (max-width: 600px)
		text-align: center;
		

.nomarginbottom
	margin-bottom:0!important;
	
.menu
	background:white;
	li.tab a
		color:#1A237E;
		&:hover
			color:#1A237E;
	.indicator
		background-color: #1A237E;

.padding
	padding: 0 1em;

.slider 
	ul.slides
		height:100%;
	ul.indicators
		z-index:10;
		li.indicator-item
			background:#FFFFFA;
			// box-shadow:1px 1px 10px rgba(0,0,0,0.9);
			box-shadow: 1px 1px 0px rgba(230,230,230,1), 1px 1px 0px rgba(200,200,200,1);
			width:12px;
			height:12px;
			&.active
				background:#2CEF5B;
				box-shadow: 1px 1px 0px rgba(81, 247, 121, 0.83),1px 1px 0px rgba(44, 239, 91, 0.83); 

ul.side-nav .collapsible-header
	color:black;
	
.waves-effect.waves-indigo .waves-ripple 
	 background-color: rgba(26, 35, 126, 0.3);
